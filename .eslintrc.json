{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2018, // Aktualizacja wersji ECMA na 2018
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["off"],
    "quotes": ["off"],
    "semi": ["error", "always"],
    "no-console": ["off"]
  },
  "globals": {
    "Handlebars": true,
    "dataSource": true,
    "utils": true
  }
}
